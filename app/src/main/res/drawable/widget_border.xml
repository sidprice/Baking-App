<?xml version="1.0" encoding="utf-8"?>
<!-- https://stackoverflow.com/questions/15111402/how-can-i-create-a-border-around-an-android-linearlayout/15111515 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:height="2dp"
                android:color="#808080" />
            <solid android:color="#c8c8c8" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp"
                android:bottom="1dp" />

            <corners android:radius="20dp" android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

</layer-list>